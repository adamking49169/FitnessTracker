@model FitnessTracker.Models.MacroEntry

@{
    ViewData["Title"] = "Create Macro Entry";
}

<h1>@ViewData["Title"]</h1>
<h4>Macro Entry</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.Date)

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CarbsGrams" class="control-label"></label>
                <input asp-for="CarbsGrams" class="form-control" />
                <span asp-validation-for="CarbsGrams" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProteinGrams" class="control-label"></label>
                <input asp-for="ProteinGrams" class="form-control" />
                <span asp-validation-for="ProteinGrams" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FatGrams" class="control-label"></label>
                <input asp-for="FatGrams" class="form-control" />
                <span asp-validation-for="FatGrams" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
