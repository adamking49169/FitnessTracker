@model FitnessTracker.Models.Workout

@{
    ViewData["Title"] = "Workout Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date:yyyy-MM-dd</dd>

        <dt class="col-sm-2">Exercise</dt>
        <dd class="col-sm-10">@Model.Exercise?.Name</dd>

        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.DurationMinutes mins</dd>

        <dt class="col-sm-2">Calories</dt>
        <dd class="col-sm-10">@Model.CaloriesBurned</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
