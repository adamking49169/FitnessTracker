@model FitnessTracker.Models.Workout
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Workout";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.Date)

    <div class="form-group">
        <label asp-for="ExerciseId">Exercise</label>
        <select asp-for="ExerciseId" class="form-control" asp-items="ViewBag.Exercises">
            <option value="">-- Select --</option>
        </select>
        <span asp-validation-for="ExerciseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DurationMinutes">Duration (min)</label>
        <input asp-for="DurationMinutes" class="form-control" />
        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserWeightKg">Your Weight (kg)</label>
        <input asp-for="UserWeightKg" class="form-control" />
        <span asp-validation-for="UserWeightKg" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
