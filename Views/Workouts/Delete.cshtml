@model FitnessTracker.Models.Workout

@{
    ViewData["Title"] = "Delete Workout";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.Date</dd>

        <dt class="col-sm-2">Exercise</dt>
        <dd class="col-sm-10">@Model.Exercise?.Name</dd>

        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.DurationMinutes mins</dd>
    </dl>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
