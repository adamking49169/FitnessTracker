@model IEnumerable<FitnessTracker.Models.Workout>

@{
    ViewData["Title"] = "My Workouts";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Log New Workout</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No workouts yet.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Exercise</th>
                <th>Duration (min)</th>
                <th>Calories</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var w in Model)
            {
                <tr>
                    <td>@w.Date.Date</td>
                    <td>@w.Exercise?.Name</td>
                    <td>@w.DurationMinutes</td>
                    <td>@w.CaloriesBurned</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@w.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@w.Id">Edit</a>   |
                        <a asp-action="Delete" asp-route-id="@w.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
