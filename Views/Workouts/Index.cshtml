@model IEnumerable<FitnessTracker.Models.Workout>

@{
    ViewData["Title"] = "My Workouts";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Log New Workout</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You haven't logged any workouts yet.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Duration (min)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workout in Model)
            {
                <tr>
                    <td>@workout.Date.ToString("yyyy-MM-dd")</td>
                    <td>@workout.Name</td>
                    <td>@workout.DurationMinutes</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@workout.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-action="Edit" asp-route-id="@workout.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@workout.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
